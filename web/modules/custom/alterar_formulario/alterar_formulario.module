        // $form['field_celular']['widget'][0]['value']['#description'] = "Debe completar este campo"; 
        // $form['field_celular']['widget'][0]['value']['#required'] = true;


        //creacion contenedor type = fieldset
        $form['fieldset_datos_producto'] = array(
